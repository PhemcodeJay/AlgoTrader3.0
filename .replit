modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run app.py --server.port 5002 --server.address 0.0.0.0 --server.headless true"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Trading Dashboard"

[[workflows.workflow]]
name = "Streamlit Trading Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5002"
waitForPort = 5002

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5002
externalPort = 80
